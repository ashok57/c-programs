//addition ---------------------------

#include<stdio.h>
 int main(){
     int num1, num2, result;
     num1 = 20;
     num2 = 10;
     result = num1 + num2;
     printf("%d", result);
     return 0;
     }
     
// subtraction-----------------------

#include<stdio.h>
 int main(){
     int num1, num2, result;
     num1 = 20;
     num2 = 10;
     result = num1 - num2;
     printf("%d", result);
     return 0;
     }
 
// Multiplicaion--------------------

#include<stdio.h>
 int main(){
     int num1, num2, result;
     num1 = 20;
     num2 = 10;
     result = num1 * num2;
     printf("%d", result);
     return 0;
     }
 
//  Division-----------------------

 #include<stdio.h>
 int main(){
     int num1, num2, result;
     num1 = 20;
     num2 = 10;
     result = num1 / num2;
     printf("%d", result);
     return 0;
     } 
 
// Modulus(remainder)---------------

 #include<stdio.h>
 int main(){
     int num1, num2, result;
     num1 = 20;
     num2 = 10;
     result = num1 % num2;
     printf("%d", result);
     return 0;
     } 
 // increment-----------------------
 
 #include<stdio.h>
 int main(){
     int num1, num2, result;
     num1 = 20;
     num1++;
     
     printf("%d",num1);
     return 0;
     } 
     
 // decrement---------------------
 
 #include<stdio.h>
 int main(){
     int num1, num2, result;
     num1 = 20;
     num1--;
     
     printf("%d",num1);
     return 0;
     
 }
 
