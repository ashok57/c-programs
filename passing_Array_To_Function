FOR ONE VALUE:
#include<stdio.h>
void display(int marks){
      printf("The marks received is %d",marks);
}
int main(){
        int marks[] = {53,59,51};
        display(marks[0]);
    return 0;
}

=======================
WHEN AN ARRAY IS PASSED TO A FUNCTION
 
#include<stdio.h>
void display(int marks[], int size){
    int counter;
    for(counter = 0; counter< size; counter++){
        printf("The array value at %d is %d\n",counter, marks[counter]);
    }
      
}
int main(){
        int marks[] = {53,59,51};
        display(marks,3 );
    return 0;
}
